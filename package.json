{
	"name": "appbee-sapper-toolbelt",
	"version": "0.0.1",
	"description": "Tool to build appbee within sapper when changes happen",
	"files": [
		"dist"
	],
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"scripts": {
		"test": "NODE_ENV=development TS_NODE_FILES=true jest --passWithNoTests --forceExit --detectOpenHandles",
		"test:coverage": "NODE_ENV=development TS_NODE_FILES=true jest --forceExit --coverage --detectOpenHandles",
		"prebuild": "rimraf dist",
		"predev": "rimraf dist",
		"lint": "prettier-eslint 'src/**/*.ts' --write",
		"build": "NODE_ENV=production rollup -c",
		"prepublishOnly": "npm run build",
		"preversion": "npm test && npm run lint",
		"version": "git add -A .",
		"postversion": "git push && git push --tags && npm publish",
		"dev": "rollup -c --watch"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"npm run lint",
			"git add"
		]
	},
	"dependencies": {
		"glob": "^7.1.6",
		"chokidar": "^3.3.1"
	},
	"devDependencies": {
		"@rollup/plugin-commonjs": "^11.0.1",
		"@rollup/plugin-json": "^4.0.1",
		"@rollup/plugin-node-resolve": "^11.2.1",
		"@types/fs-extra": "^9.0.1",
		"@types/jest": "^24.0.22",
		"@typescript-eslint/eslint-plugin": "^2.6.1",
		"@typescript-eslint/parser": "^2.6.1",
		"coveralls": "^3.0.7",
		"eslint": "^5.1.0",
		"eslint-config-prettier": "^6.5.0",
		"eslint-plugin-import": "^2.18.2",
		"husky": "^3.0.9",
		"jest": "^24.9.0",
		"lint-staged": "^9.4.2",
		"prettier": "^1.19.1",
		"prettier-eslint-cli": "^5.0.0",
		"rimraf": "^3.0.0",
		"rollup": "^1.26.5",
		"rollup-plugin-terser": "^5.3.1",
		"rollup-plugin-typescript2": "^0.30.0",
		"ts-jest": "^24.1.0",
		"typescript": "^3.7.2"
	}
}
